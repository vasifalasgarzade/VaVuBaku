@model List<Hall>

<div class="row down-halls hall-room-buttons">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <button class="btn btn-outline-primary w-25 exit-button"><i class="fas fa-arrow-left w-100 fa-3x"></i></button>
    </div>
    @foreach (var downhall in Model)
    {
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
            <a asp-controller="Hall" asp-action="Orders" class="no-underline">
                <div class="p-3 down-hall-buttons hlfo">
                    <h2>@downhall.Name</h2>
                </div>
            </a>
        </div>
    }
</div>
