@model List<FoodCategory>

<div class="row room-hall-orders">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <button class="btn btn-outline-primary w-25 exit-button"><i class="fas fa-arrow-left w-100 fa-3x"></i></button>
    </div>
    @foreach (var category in Model)
    {
        <div class="col-4">
            <label class="mt-3">@category.Name</label>
            <select class="form-control" asp-items="@(new SelectList(category.Foods,"Price","Name"))">
                <option>Seç</option>
            </select>
        </div>
    }
    <div class="col-12 mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Sekil</th>
                    <th scope="col">Sifariş</th>
                    <th scope="col">Qiymət</th>
                    <th scope="col">Ədəd</th>
                    <th scope="col">Ümumi</th>
                    <th scope="col">Sil</th>

                </tr>
            </thead>
            <tbody>
                <!--Dynamic tr to here-->
            </tbody>
        </table>
    </div>


    <div class="col-12">
        <div class="row">
            <div class="text-left col-lg-8 col-md-8 col-sm-6 col-6">
                <button class="btn btn-primary w-100">Sifarişi Təsdiq Et</button>
            </div>
            <div class="text-right col-lg-4 col-md-4 col-sm-6 col-6">
                <span id="SubTotalPrice"></span>
            </div>
        </div>
    </div>
</div>