@model Setting
<section class="page-banner" style="background: #121619 url(images/blog-8.jpg) no-repeat center / cover ;">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="page-title">
                    <h1 class="page-headding">Əlaqə</h1>
                    <ul>
                        <li><a class="page-name" asp-action="Index" asp-controller="Home">Əsas Səhifə</a></li>
                        <li>Əlaqə</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact ptb">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="headding-part text-center">
                    <p class="headding-sub">Vavu Baku</p>
                    <h2 class="headding-title text-uppercase font-weight-bold">Əlaqə</h2>
                </div>
            </div>
        </div>
        <div class="contact-in">
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-5">
                    <div class="contact-detail">
                        <h3 class="contact-head">Əlaqə Məlumatları</h3>
                        <p class="contact-desc">Şikayət və təkliflərinizi bizə göndərə bilərsiniz.</p>
                        <ul>
                            <li><i class="fa fa-@Model.AddressIcon" aria-hidden="true"></i><a href="javascript:void(0)">@Model.Address</a></li>
                            <li><i class="fa fa-@Model.PhoneIcon" aria-hidden="true"></i><a href="tel:@Model.Phone">@Model.Phone</a></li>
                            <li><i class="fa fa-@Model.EmailIcon" aria-hidden="true"></i><a href="mailto:@Model.Email">@Model.Email</a></li>
                            <li>
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <a href="javascript:void(0)">
                                    <span>Hər gün : 11:00 - :00</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-8 col-md-7">
                    <div class="leave">
                        <form id="contact-message-form" method="post">
                            <div class="form-group">
                                <input type="text" name="Email" class="form-control" id="contact-msg-email" placeholder="Mail" required>
                                <span class="validation-span d-none">Bu sahə boş buraxıla bilməz!</span>
                            </div>
                            <div class="form-group">
                                <input type="text" name="Subject" class="form-control" id="contact-msg-subject" placeholder="Mövzu" required>
                                <span class="validation-span d-none">Bu sahə boş buraxıla bilməz!</span>
                            </div>
                            <div class="form-group">
                                <input type="text" name="Phone" class="form-control" id="contact-msg-phone" placeholder="Telefon" required>
                                <span class="validation-span d-none">Bu sahə boş buraxıla bilməz!</span>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Mesaj" id="contact-msg-txt" required></textarea>
                                <span class="validation-span d-none">Bu sahə boş buraxıla bilməz!</span>
                            </div>
                            <input type="submit" name="submit" value="Göndər" class="post-com" id="btn-contact-message">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-map">
    <iframe class="map-pizzon" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12150.390246416968!2d49.812321904501474!3d40.41776524577329!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4030873500a96c87%3A0x4a1dab2f6524c360!2sVa%20%26%20Vu%20rooms!5e0!3m2!1str!2s!4v1612950332186!5m2!1str!2s" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
</section>