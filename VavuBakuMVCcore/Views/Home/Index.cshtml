<section class="news ptb">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="headding-part pb-50 text-center">
                    <p class="headding-sub">Vavu Baku</p>
                    <h2 class="headding-title text-uppercase font-weight-bold">Son Fəaliyyətlərimiz</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var activity in Model.Activ)
            {
                <div class="col-xl-4 col-lg-4 col-md-4 news-part">
                    <div class="new-box">
                        <div class="news-img">
                            <a href="#">
                                <img src="~/images/@activity.Photo" alt="@activity.Title" class="news-image" height="280">
                            </a>
                            <div class="text-uppercase news-date">
                                <span>
                                    @activity.ActivityDate.Day<br>@activity.ActivityDate.ToString("MMMM")
                                </span>
                            </div>
                            <span class="news-date-bg"></span>
                        </div>
                        <a href="#" class="news-headline mt-4">
                            @activity.Title
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>